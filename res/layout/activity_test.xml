<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.test.TestActivity"
    android:background="#ffffff">

    <TextView
        android:id="@+id/AnimText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Hello World!" />
    <TextView
        android:id="@+id/outputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="no Anim"/>

    <Button
        android:id="@+id/AnimStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startAnim"
        android:textSize="20dp"
        android:background="@drawable/rec_btn_sele"
        />
    <Button
        android:id="@+id/AnimState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showAnimState"
        android:textSize="20dp"
        android:background="@drawable/shadow_btn"/>
    <Button
        android:id="@+id/AnimClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clearAnim"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/FDTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FDTest"
        android:textSize="20dp"/>

</LinearLayout>
